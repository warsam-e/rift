{
	"name": "@warsam-e/rift",
	"description": "A lightweight postgres library for TypeScript",
	"version": "1.0.1",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"type": "module",
	"license": "MIT",
	"files": [
		"dist"
	],
	"scripts": {
		"build:lib": "tsdown",
		"build:types": "dts-bundle-generator -o ./dist/index.d.ts --no-check ./lib/index.ts",
		"build:docs": "typedoc --options typedoc.json",
		"build": "bun build:lib && bun build:types && bun build:docs"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@types/bun": "1.2.20",
		"dts-bundle-generator": "9.5.1",
		"tsdown": "0.14.1",
		"typedoc-github-theme": "0.3.0",
		"typescript": "5.9.2"
	},
	"dependencies": {
		"@types/pg": "8.15.5",
		"pg": "8.16.3"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/warsam-e/rift.git"
	},
	"bugs": {
		"url": "https://github.com/warsam-e/rift/issues"
	},
	"homepage": "https://warsame.me/rift"
}
